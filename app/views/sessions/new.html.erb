<%#= render 'shared/content_title', title: 'Log in' %>

<div>
	<%= form_tag '/login' do %>
		<div>
			<%= label_tag :username %>
			<%= text_field_tag :username %>
		</div>
		<div>
			<%= label_tag :password %>
			<%= password_field_tag :password %>
		</div>
		<%= submit_tag 'Login', class: "btn btn-success" %>
	<% end %>
</div>
